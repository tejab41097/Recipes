<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tejas.recipe">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.RecipeApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/recipe_book"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:roundIcon="@drawable/recipe_book"
        android:supportsRtl="true"
        android:theme="@style/Theme.Recipes">
        <activity android:name=".ui.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MainActivity" />
    </application>

</manifest>